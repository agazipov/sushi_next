generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Categorie {
  id     String @id @default(cuid())
  name   String @unique
  dishes Dish[]
}

model Set {
  id          String @id @default(cuid())
  name        String @unique
  discription String?
  price       Int
  dishes      Dish[]
}

model Dish {
  id              String     @id @default(cuid())
  name            String
  compound        String?
  price_for_mid   Int
  price_for_large Int
  countByMid      Int        @default(0)
  countByLarge    Int        @default(0)
  select          String     @default("large")
  img             String
  Categorie       Categorie? @relation(fields: [categorieId], references: [id])
  categorieId     String?
  Set             Set?       @relation(fields: [setId], references: [id])
  setId           String?
}

model User {
  id           String @id @default(cuid())
  name         String @unique
  passwordHash String
  salt         String
  // Session      Session[]
}

